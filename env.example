# Google Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Model Selection (gemini-1.5-pro or gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash-latest

# Server Configuration
MCP_SERVER_NAME=software-architect-mcp
MCP_SERVER_VERSION=0.1.0

# Storage Configuration
STORAGE_BASE_PATH=./.tmp
STORAGE_CLEANUP_INTERVAL_MS=3600000
STORAGE_MAX_AGE_MS=86400000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/server.log

# Performance
MAX_CODEBASE_SIZE_MB=100
REPOMIX_TIMEOUT_MS=30000
GEMINI_REQUEST_TIMEOUT_MS=60000

# Security
ENABLE_AUDIT_LOG=true
ENCRYPT_TEMP_FILES=false 